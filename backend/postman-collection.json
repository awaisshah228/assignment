{
  "info": {
    "name": "User Data API - Advanced Caching",
    "description": "Complete API collection for testing the User Data API with caching, rate limiting, and async processing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get User by ID (Cache Test)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/users/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users", "1"]
        },
        "description": "Retrieve user by ID. First call will be cache miss (~200ms), subsequent calls will be cache hits (~2ms)"
      }
    },
    {
      "name": "Get User 2",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/users/2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users", "2"]
        }
      }
    },
    {
      "name": "Get User 3",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/users/3",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users", "3"]
        }
      }
    },
    {
      "name": "Get Non-Existent User (404)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/users/999",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users", "999"]
        },
        "description": "Test 404 error handling for non-existent user"
      }
    },
    {
      "name": "Create New User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Bob Wilson\",\n  \"email\": \"bob@example.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["users"]
        },
        "description": "Create a new user. User will be automatically cached."
      }
    },
    {
      "name": "Get Cache Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/cache-status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["cache-status"]
        },
        "description": "Get comprehensive cache statistics including hits, misses, hit rate, and average response time"
      }
    },
    {
      "name": "Clear Cache",
      "request": {
